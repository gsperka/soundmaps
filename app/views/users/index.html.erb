<%= javascript_tag do %>
  window.tracks = <%=raw Track.all.to_json %>
<% end %>

<% if session[:current_user_id] %>
  <%= javascript_tag do %>
    window.user_tracks = <%=raw User.find(session[:current_user_id]).tracks.to_json %>
  <% end %>
<% else %>
  <%= javascript_tag do %>
    window.user_tracks = <%= {}.to_json %>
  <% end %>
<% end %>

<div id="map-canvas"></div>

<div id='footer'>
  <form id='geocoder'>
    <input id='geocode_bar' id='address' type='textbox' name='location' value='351 W. Hubbard Chicago, IL'>
    <input type='submit' value='Find Location'>
  </form>

  <span id='song'>
    <audio controls></audio>
  </span>

  <button id='toggle_markers'>Toggle All Markers</button>
  <% if session[:current_user_id] %>
    <button id='toggle_user_markers'>Toggle User Markers</button>
  <% end %>
</div>


  <div id='song'>
    <audio id='player' autoplay controls>
  </div>
<div id="overlay"></div>


<div id="login_modal">
  <%= render '/sessions/login' %>
</div>

<div id="signup_modal">
  <%= render '/users/new' %>
</div>

<div id="audio_modal">
  <%= form_for(:track, url: '/tracks') do |f| %>
    <p><%= f.text_field :title, placeholder: 'Title' %></p>
    <p><%= f.text_field :description, placeholder: 'Description'  %></p>
    <p><%= f.file_field :clip %></p>
    <p><%= f.submit 'Map It!' %></p>
  <% end %>
</div>




























