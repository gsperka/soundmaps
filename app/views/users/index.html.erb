<%= javascript_tag do %>
  window.tracks = <%=raw Track.all.to_json %>
<% end %>

<div id="map-canvas"></div>

<div id='footer'>
  <form id='geocoder'>
    <input id='geocode_bar' id='address' type='textbox' name='location' value='351 W. Hubbard Chicago, IL'>
    <input type='submit' value='Find Location'>
  </form>

  <span id='song'>
    <audio controls></audio>
  </span>
</div>


  <div id='song'>
    <audio id='player' autoplay controls>
  </div>
<div id="overlay"></div>


<div id="login_modal">
  <h1>Log In</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <p><%= f.text_field :username, :placeholder => 'Username' %></p>
    <p><%= f.password_field :password, :placeholder => 'Password' %></p>
    <%= f.submit "Log in" %>
  <% end %>
</div>

<div id="signup_modal">
  <h1>Sign Up</h1>
  <%= form_for :user do |f| %>
  <p><%= f.text_field :email, :placeholder => 'Email' %></p>
  <p><%= f.text_field :username, :placeholder => 'Username' %></p>
  <p>
    <%= f.password_field :password, :placeholder => 'Password' %><br>
    <%= f.password_field :password_confirmation, :placeholder => 'Confirmation' %>
  </p>
  <%= f.submit 'Sign Up' %>
  <% end %>
</div>
