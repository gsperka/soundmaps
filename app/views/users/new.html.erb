<div class='signuppage'>

	<h1> Please Sign Up</h1>

	<%= form_for @user do |f| %>
	<p><%= f.label :email %>
	  <%= f.text_field :email %>
	</p>
	<p><%= f.label :username %>
	  <%= f.text_field :username %>
	</p>
	<p>
	  <%= f.label :password %>
	  <%= f.password_field :password %>
	  <%= f.label :confirm_password %>
	  <%= f.password_field :password_confirmation %>
	</p>
	<%= f.submit %>
	<% end %>
</div>